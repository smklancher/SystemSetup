<control name="social-group-list" type="list">
	<color name="background" red="-1" green="-1" blue="-1"/> <!-- Totally clear -->
	<color name="normal-back" red="-1" green="-1" blue="-1"/> <!-- Totally clear -->
	<color name="normal-fore" red="200" green="200" blue="200"/>
	<color name="hover-fore" red="255" green="255" blue="255"/>
	<color name="select-fore" red="255" green="255" blue="255"/>
	<color name="count-fore" red="255" green="255" blue="255"/>
	<color name="group-fore" red="150" green="150" blue="150" filter_source="hueshift"/> 
	<color name="group-hover-fore" red="150" green="150" blue="150" filter_source="hueshift"/> 
	<color name="group-select-fore" red="150" green="150" blue="150" filter_source="hueshift"/> 

	<font name="group" source="segoeui" type="Segoe UI" size="7" bold="0" italic="0"/> <!-- Group header -->
	<font name="default" source="segoeui" type="Segoe UI" size="9"/>
	<font name="count" source="segoeui" type="Segoe UI"	size="7" bold="1"	allcaps="0"/>

	<size name="16"> 

		<settings type="list" name="group1IndentLeft" value="8"/>

		<list-item name="group" defaulty="25" type="simple">
			<icontrol name="line1">
				<rect>
					<left num="11" width="0"/>
					<right num="4" width="1"/>
					<top num="7" height="0"/>
				</rect>
				<settings name="text-wordwrap" value="0"/>
				<settings name="text-alignment" value="left"/>
				<settings name="text-vertical-alignment" value="0"/>
			</icontrol>
		</list-item>

		<list-item name="normal" defaulty="max(28,(%this.line1.textHeight% + 12))" type="list">

			<!-- Hover Background -->
			<background transparent="1" type="hover" stretch="1" middle="1">
				<source name="buttons-asset" left="55" top="84" right="105" bottom="106"/> <!-- theme -->
				<slice left="58" top="87" right="102" bottom="103"/>
				<rect>
					<left num="-%this.indent.left% + 1" width="0"/> <!-- a little trick to ignore the indents so the hover effect is the full width of the list -->
					<right num="-%this.indent.right% + 1" width="1"/>
				</rect>
			</background>

			<!-- Select Background -->
			<background transparent="1" type="select" stretch="1" middle="1">
				<source name="buttons-asset" left="55" top="128" right="105" bottom="156"/> <!-- theme -->
				<slice left="65" top="129" right="102" bottom="155"/>
				<rect>
					<left num="-%this.indent.left%" width="0"/>
					<right num="-%this.indent.right%" width="1"/>
				</rect>
			</background>

			<!-- The users avatar or icon -->
			<icontrol name="icon">
				<rect>
					<left num="0" width="0"/>
					<top num="6" height="0"/>
					<right num="16" width="0"/>
					<bottom num="22" height="0"/>
				</rect>
			</icontrol>

			<!-- The contacts name (or in other lists, an identifier for your mail accounts etc etc -->
			<icontrol name="line1">
				<rect>
					<top num="7" height="0"/>
					<left num="23" width="0"/>
					<right num="4+(%this.count%*(13+%this.count.textWidth%))" width="1"/>
				</rect>
				<settings name="text-wordwrap" value="0"/>
				<settings name="text-alignment" value="left"/>
			</icontrol>

			<!-- Background for the count - in 4.0 build this was for mail only. In 4.1 builds this has expanded -->
			<background name="count" stretch="1" visible="%this.count%">
				<source name="general16-asset" left="64" top="0" right="83" bottom="14"/> <!-- theme -->
				<slice left="71" top="6" right="75" bottom="7"/>
				<rect>
					<left num="15+%this.count.textWidth%" width="1"/>
					<top num="7" height="0"/>
					<right num="5" width="1"/>
					<bottom num="22" height="0"/>
				</rect>
			</background>

			<!-- The actual count amount -->
			<icontrol name="count">
				<rect>
					<left num="10+%this.count.textWidth%" width="1"/> 
					<top num="7" height="0"/>
					<right num="10" width="1"/>
					<bottom num="21" height="0"/>
				</rect>
			</icontrol>

		</list-item>
	</size>
</control>

